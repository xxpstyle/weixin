/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0;
	background: #e85654;
  width: 750rpx;
}

.userinfo-avatar {
  /* 设置头像的大小 */
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.sex-avatar {
  /* 设置头像的大小 */
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
}
.userinfo-nickname {
  /* 设置昵称 */
  color: white;
}
.my-item{
    color:#515151;
    width: 100%;
    background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 750rpx center;
    background-size: 16rpx auto,750rpx auto;
    margin: 20rpx 0; 
    border-bottom: 1px solid #eee;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 100rpx;
}
.my-item image {
  margin-right: 50rpx;
  height: 50rpx;
  width: 50rpx;
}
.my-item text {
  color:#aaa;
}
